#include<bits/stdc++.h>
using namespace std;
int maxprodsubarr(vector<int>&arr,int size)
{
    int pre=1,suff=1,ans;
    for(int i =0 ; i < size;i++)
    {
        if(pre==0)  
            pre =1;
        if(suff==0)
            suff= 1;
        pre = *arr[i];
        suff = *arr[n-i-1];
        ans = max(pre,suff);
    }
    return ans;
}

int main()
{
    int size,ans;
    vector<int> arr;
    cout<<"Enter the size of array:";
    cin>>size;
    cout<<endl<<"Enter the elements of array:"<<endl;
    for(int i =0 ; i<size;i++)
    {
        int num;
        arr.push_back(num);
    }
    ans = maxprodsubarr(arr, size);
    cout<<"The maximum sum of subarray is: "<<ans;
    return 0;
}
